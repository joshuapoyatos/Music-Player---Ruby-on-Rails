<div id = 'login'>
	<h3> Login </h3>
	<%= form_tag('/login', method: :post) do %>
		<div><input class='textfield' type='text' name='username' placeholder='Username' /></div>
		<div><input class='textfield' type='password' name='password' placeholder='Password'/></div>
		</br> <div id = 'login_button'><button type='submit' class='btn btn-success' style='color:#6D6D6D'>Login</button></div>
	<% end %>
	<a href = '/register'>Register</a>
</div>